{
  "extends": "@phanect/configs/ts",

  // Check by ESLint to ignore files under tmp/
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "incremental": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "plugins": [{
      "name": "next"
    }],
    "paths": {
      "@/*": [ "./src/*" ]
    }
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
  ],
  "exclude": [
    "**/node_modules/**",
    "**/build/**",
    "**/out/**"
  ]
}
